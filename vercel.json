{
  "buildCommand": "npm run build",
  "devCommand": "vite",
  "installCommand": "npm install",
  "framework": "vite",
  "outputDirectory": "dist",
  "env": {
    "DEEPSEEK_API_KEY": {
      "description": "DeepSeek API key for AI content generation"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token signing (generate with: node -e \"console.log(require('crypto').randomBytes(32).toString('hex'))\""
    },
    "NODE_ENV": {
      "description": "Node environment",
      "default": "production"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "redirects": [
    {
      "source": "/admin/:path*",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/editor/:path*",
      "destination": "/index.html",
      "permanent": false
    }
  ]
}

