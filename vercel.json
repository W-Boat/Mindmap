{
  "buildCommand": "npm run build",
  "devCommand": "vite",
  "installCommand": "npm install",
  "framework": "vite",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/admin/:path*",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/editor/:path*",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/mindmaps/:path*",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/dashboard/:path*",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/login",
      "destination": "/index.html",
      "permanent": false
    },
    {
      "source": "/register",
      "destination": "/index.html",
      "permanent": false
    }
  ]
}


